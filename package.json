{
  "name": "lia360",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate --schema=packages/database/prisma/schema.prisma || echo 'Prisma generate skipped'",
    "build": "turbo build",
    "build:api": "npm run build --workspace=@lia360/shared && npm run build --workspace=@lia360/database && npm run build --workspace=@lia360/api",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:api": "npm run test --workspace=@lia360/api",
    "test:web": "npm run test --workspace=@lia360/web",
    "test:coverage": "turbo test --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "npm run studio --workspace=@lia360/database",
    "api:dev": "npm run dev --workspace=@lia360/api",
    "web:dev": "npm run dev --workspace=@lia360/web",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "test:performance:scoring": "npx tsx apps/api/src/tests/performance-test-batch-scoring.ts"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "shadcn": "^3.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
